{% extends "base.html.twig" %}

{% block title %}Card Game{% endblock %}

{% block body %}
<h1>Draw Cards</h1>

<p>Here are the value of the cards drawn.</p>

<h3>Cards left: {{ num_cards }} cards</h3>
<div class="draw">
{% for card in cardString %}
    <img src="{{ asset('img/' ~ card) }} " width="100" alt="cards">
{% endfor %}
</div>

<p>Try to draw 
    <a href="{{ path('card_deck_draw_number', {num: 5}) }}">5</a>
    or 
    <a href="{{ path('card_deck_draw_number', {num: 20}) }}">20</a>
    dices.
</p>
{% endblock %}